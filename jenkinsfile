pipeline {
    agent any

    environment {
        DOCKER_REGISTRY = 'docker.io'
        DOCKER_CREDENTIALS = credentials('docker-hub-new')
        GITHUB_TOKEN = credentials('github-token')
        RENDER_API_KEY = credentials('render-api-key')
        RENDER_APP_URL = credentials('render-app-url')
        IMAGE_NAME = "${DOCKER_REGISTRY}/${DOCKER_CREDENTIALS_USR}/yobalema"
        IMAGE_TAG = "latest"
        RENDER_SERVICE_ID = "srv-d4b6s7ili9vc73d9f2kg"
        APP_ENV = "prod"
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    echo "üì¶ R√©cup√©ration du code depuis GitHub..."
                    checkout scm
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    echo "üì• Installation des d√©pendances Composer..."
                    sh '''
                        php --version
                        composer --version
                        composer install --no-dev --optimize-autoloader --no-interaction
                    '''
                }
            }
        }

        stage('Cache & Optimization') {
            steps {
                script {
                    echo "‚ö° Optimisation Symfony..."
                    sh '''
                        # Vider le cache
                        php bin/console cache:clear --env=prod --no-debug
                        
                        # R√©chauffer le cache
                        php bin/console cache:warmup --env=prod --no-debug
                    '''
                }
            }
        }

        stage('Database Migrations') {
            steps {
                script {
                    echo "üóÑÔ∏è V√©rification des migrations..."
                    sh '''
                        # Ex√©cuter les migrations (si n√©cessaire)
                        php bin/console doctrine:migrations:migrate --no-interaction --env=prod || true
                    '''
                }
            }
        }

        stage('Tests') {
            steps {
                script {
                    echo "üß™ Ex√©cution des tests PHPUnit..."
                    sh '''
                        # Installer les d√©pendances de dev pour les tests
                        composer install --optimize-autoloader --no-interaction
                        
                        # Ex√©cuter les tests
                        php bin/phpunit || true
                    '''
                }
            }
        }

        stage('Code Quality') {
            steps {
                script {
                    echo "üîç Analyse de la qualit√© du code..."
                    sh '''
                        # PHP CS Fixer (si configur√©)
                        vendor/bin/php-cs-fixer fix --dry-run --diff || true
                        
                        # PHPStan (si configur√©)
                        vendor/bin/phpstan analyse src --level=5 || true
                    '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "üê≥ Construction de l'image Docker..."
                    sh '''
                        docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
                        docker tag ${IMAGE_NAME}:${IMAGE_TAG} ${IMAGE_NAME}:${BUILD_NUMBER}
                    '''
                }
            }
        }

        stage('Push to Docker Registry') {
            steps {
                script {
                    echo "üì§ Push vers Docker Hub..."
                    sh '''
                        echo $DOCKER_CREDENTIALS_PSW | docker login -u $DOCKER_CREDENTIALS_USR --password-stdin
                        docker push ${IMAGE_NAME}:${IMAGE_TAG}
                        docker push ${IMAGE_NAME}:${BUILD_NUMBER}
                        docker logout
                    '''
                }
            }
        }

        stage('Deploy to Render') {
            steps {
                script {
                    echo "üöÄ D√©ploiement sur Render..."
                    sh '''
                        # V√©rifier que le service ID est configur√©
                        if [ "$RENDER_SERVICE_ID" = "srv_xxxxxxxxxxxxx" ]; then
                            echo "‚ö†Ô∏è ATTENTION: SERVICE_ID non configur√©!"
                            echo "Veuillez remplacer srv_xxxxxxxxxxxxx par votre ID r√©el"
                            exit 1
                        fi
                        
                        # D√©clencher le red√©ploiement via l'API Render
                        RESPONSE=$(curl -s -X POST https://api.render.com/deploy/$RENDER_SERVICE_ID \
                            -H "Authorization: Bearer ${RENDER_API_KEY}" \
                            -H "Content-Type: application/json")
                        
                        echo "üì° R√©ponse Render: $RESPONSE"
                        echo "‚úÖ Demande de red√©ploiement envoy√©e √† Render"
                        echo "üåê Votre application sera disponible sur: ${RENDER_APP_URL}"
                    '''
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                script {
                    echo "üîç V√©rification du d√©ploiement..."
                    sh '''
                        sleep 30
                        HTTP_CODE=$(curl -s -o /dev/null -w "%{http_code}" ${RENDER_APP_URL})
                        
                        if [ "$HTTP_CODE" = "200" ]; then
                            echo "‚úÖ Application accessible sur ${RENDER_APP_URL}"
                        else
                            echo "‚ö†Ô∏è Code HTTP: $HTTP_CODE"
                        fi
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Pipeline ex√©cut√© avec succ√®s!"
            echo "üåê Application Symfony disponible sur: ${RENDER_APP_URL}"
        }
        failure {
            echo "‚ùå Le pipeline a √©chou√©. V√©rifiez les logs."
        }
        always {
            cleanWs()
        }
    }
}